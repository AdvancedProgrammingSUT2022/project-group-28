<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="views.InviteGameRequestPage"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../css/request_page.css"
            styleClass="background">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Text fx:id="message" styleClass="normal_text" text=""/>
            <Button styleClass="normal_button" onMouseClicked="#accept" text="Accept"/>
            <Button styleClass="normal_button" onMouseClicked="#reject" text="Reject"/>
        </VBox>
    </center>
</BorderPane>
